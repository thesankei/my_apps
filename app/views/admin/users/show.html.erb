<% provide(:title,'Admin: Show Users')%>
<div class="row">
	  
  <div class="large-2 columns">
  	<p>#Space a</p>
  </div>	
  
  <div class="large-8 columns">

	<h3 class="subheader"><%= @user.name%></h3>
	<label class="label"><%= t("activerecord.attributes.user.email", :default => t("activerecord.labels.email", :default => "Email")) %>:</label>
	<p><%= @user.email %></p>
	<%= gravatar_for @user %>
	
	<div class="form-actions">
	<%= link_to "Back", admin_users_path, :class => 'btn'  %>
	<%= link_to "Edit", edit_admin_user_path(@user), :class => 'btn' %>
	<%= link_to "Delete", admin_user_path(@user), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn' %>
	</div>
	
	</div>
	<div class="large-2 columns">
		<p>#Space b</p>
  	</div>
</div>
